{
  "name": "riprap-fishing-app",
  "version": "1.0.0",
  "description": "RipRap - Share the Shore, Spill the Lore - Anonymous fishing community PWA",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:functions": "netlify dev",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:smoke": "playwright test e2e/home.smoke.spec.js e2e/error-boundary.spec.js",
    "test:ci": "playwright test --reporter=json",
    "firebase:emulators": "firebase emulators:start --config tests/firebase/firebase.test.json",
    "test:with-emulators": "concurrently \"npm run firebase:emulators\" \"npm run test:e2e\" --kill-others --success first"
  },
  "dependencies": {
    "firebase": "^12.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "firebase-tools": "^14.14.0",
    "netlify-cli": "^17.10.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^4.5.0"
  }
}
